<h6 class="community-header">Community Memoirs</h6> 
  <h1 class="community-add">View all public posts here:</h1>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4 ">
        <div class="card public-cards">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{stripTags (truncate body 90)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/stories/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>No meals to display</p>
    {{/each}}
</div>